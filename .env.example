# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost/makanan_segar_dev

# Application Configuration
PHX_HOST=localhost
PORT=4000
SECRET_KEY_BASE=your-secret-key-base-here-use-mix-phx-gen-secret
PHX_SERVER=true

# Email Configuration (Development)
# For development, emails are viewable at http://localhost:4000/dev/mailbox
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=noreply@example.com
SMTP_FROM_NAME=MakananSegar

# Admin User (for seeding)
ADMIN_EMAIL=admin@example.com

# Default Vendor Emails (for seeding)
FISH_VENDOR_EMAIL=fish-vendor@example.com
VEGETABLES_VENDOR_EMAIL=veg-vendor@example.com
FRUITS_VENDOR_EMAIL=fruit-vendor@example.com

# File Upload Configuration
UPLOAD_PATH=/priv/static/uploads
MAX_UPLOAD_SIZE=10485760

# Oban Configuration
OBAN_QUEUES_DEFAULT=10
OBAN_QUEUES_MAILERS=20
OBAN_PRUNE_LIMIT=10000
OBAN_PRUNE_MAX_AGE=60

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_VENDOR_REGISTRATION=true
MAINTENANCE_MODE=false

# External Services (Optional)
# AWS_ACCESS_KEY_ID=your-aws-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret
# AWS_S3_BUCKET=your-s3-bucket
# AWS_REGION=ap-southeast-1

# Monitoring (Optional)
# APPSIGNAL_PUSH_API_KEY=your-appsignal-key
# SENTRY_DSN=your-sentry-dsn

# Analytics (Optional)
# GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
# PLAUSIBLE_DOMAIN=your-domain.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Session Configuration
SESSION_EXPIRY_DAYS=30
REMEMBER_ME_EXPIRY_DAYS=60

# Product Settings
PRODUCT_EXPIRY_WARNING_HOURS=24
PRODUCT_AUTO_DELETE_AFTER_EXPIRY_DAYS=1

# Timezone
DEFAULT_TIMEZONE=Asia/Kuala_Lumpur
